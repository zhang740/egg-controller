{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": false,
    "pretty": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "inlineSourceMap": false,
    "importHelpers": true
  },
  "exclude": ["test", "node_modules*"],
  "compileOnSave": true
}
